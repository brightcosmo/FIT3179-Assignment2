{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300,
  "height": 300,
  "title": "For every 100 plantations in Malaysia...",
  "config": {
    "background":"transparent",
    "axis": {
      "labelFont": "sans-serif",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "grid": false
    },
    "view": {"stroke": null}
  },
  "data": {
    "url": "https://raw.githubusercontent.com/brightcosmo/FIT3179-Assignment2/main/data/plantation_waffle.csv"
  },
  "layer": [
    {
    "mark": {
      "type": "circle",
      "filled": true,
      "size": 800
  },
  "encoding": {
      "x": {
          "field": "col",
          "type": "quantitative",
          "axis": null,
          "sort": "-x"
      },
      "y": {
          "field": "row",
          "type": "quantitative",
          "axis": null,
          "sort": "-y"
      },
    "color": {
      "field": "plantation_type",
      "type": "nominal",
      "scale": {
        "domain": ["Oil Palm", "Rubber", "Fruit", "Timber", "Other"],
        "range": ["#FFD700", "#ff892e", "#FF0000", "#964B00", "#ADD8E6"]
      },
      "legend": {
        "title": "",
        "labelFontSize": 12,
        "orient": "bottom"
      }  }
}}
  ]
}