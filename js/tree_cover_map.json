{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Net change in tree cover in Malaysia (2001-2022)",
  "width": 750,
  "height": 350,
  "projection": {"type": "equirectangular"},
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "layer": [
    {
      "data": {
          "url": "../data/malaysia_states.json",
          "format": {
              "type": "topojson",
              "feature": "ne_50m_ocean"
          }
      },
      "mark": {
          "type": "geoshape",
          "fill": "lightblue",
          "stroke": "lightblue",
          "strokeWidth": 1
      }
  },
  {
    "data": {
        "url": "../data/malaysia_states.json",
        "format": {
            "type": "topojson",
            "feature": "ne_50m_graticules_5"
        }
    },
    "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#dbdbdb"
    }
},
{
  "data": {
      "url": "../data/malaysia_states.json",
      "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
      }
  },
  "mark": {
      "type": "geoshape",
      "fill": "#f0f0f0",
      "stroke": "#f0f0f0",
      "strokeWidth": 1
  }
},
        {
      "data": {
          "url": "../data/malaysia_states.json",
          "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
      },
      "transform": [
        {
          "lookup": "properties.NAME_1",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/brightcosmo/FIT3179-Assignment2/main/data/Country_carbon_data.csv"
            },
            "key": "subnational1",
            "fields": ["change2"]
          }
        },
        {"calculate": "datum.change2", "as": "Tree Cover Loss (%)"}
      ],
      "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Tree Cover Loss (%)",
          "type": "quantitative",
          "scale": {
            "scheme": "redblue",
            "reverse": true,
            "domain": [-5, 0, 40],
            "zero": true
          }
        },
        "tooltip": [
          {"field": "properties.NAME_1", "type": "nominal", "title": "State"},
          {"field": "Tree Cover Loss (%)", "type": "quantitative", "title": "Tree cover loss (%)"}
        ]
      }
  },
  {
    "data": {
        "url": "https://raw.githubusercontent.com/brightcosmo/FIT3179-Assignment2/main/data/ne_110m_graticules_5.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
    },
    "mark": {"type": "geoshape", "fill": null, "stroke": "white", "strokeWidth": 0.5}
  }
  ]
}