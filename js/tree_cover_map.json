{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Net change in tree cover in Malaysia (2001-2022)",
  "width": 1000,
  "height": 600,
  "projection": { "type": "equirectangular" },
  "config": {
    "background": "transparent",
    "axis": {
      "labelFont": "sans-serif",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "grid": false
    },
    "view": { "stroke": null }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brightcosmo/FIT3179-Assignment2/main/data/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightblue",
        "stroke": "lightblue",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brightcosmo/FIT3179-Assignment2/main/data/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_graticules_5"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#eaeaea"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brightcosmo/FIT3179-Assignment2/main/data/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#f0f0f0",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brightcosmo/FIT3179-Assignment2/main/data/malaysia_states.json",
        "format": { "type": "topojson", "feature": "gadm41_MYS_1" }
      },
      "transform": [
        {
          "lookup": "properties.NAME_1",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/brightcosmo/FIT3179-Assignment2/main/data/Country_carbon_data.csv"
            },
            "key": "subnational1",
            "fields": ["change2"]
          }
        },
        { "calculate": "datum.change2", "as": "Tree Cover Loss (%)" }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Tree Cover Loss (%)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "scheme": "redblue",
            "reverse": true,
            "range": ["#b9413d", "#d45f52", "#ea9178", "#f9d0bb", "#939bc7"],
            "domain": [0, 10, 20, 30],
            "zero": true
          }
        },
        "tooltip": [
          { "field": "properties.NAME_1", "type": "nominal", "title": "State" },
          {
            "field": "Tree Cover Loss (%)",
            "type": "quantitative",
            "title": "Tree cover loss (%)"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brightcosmo/FIT3179-Assignment2/main/data/tcm_annotations.csv"
      },
      "encoding": {
        "longitude": { "field": "Longitude", "type": "quantitative" },
        "latitude": { "field": "Latitude", "type": "quantitative" }
      },
      "layer": [
        {
          "transform": [
            {
              "calculate": "'Only Putrajaya had a net'",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw, ';')",
              "as": "text_annotation"
            },
            {
              "calculate": "'gain in tree cover (-2.95% loss)'",
              "as": "text_annotation_raw2"
            },
            {
              "calculate": "split(datum.text_annotation_raw2, ';')",
              "as": "text_annotation2"
            }
          ],
          "layer": [
            {
              "mark": {
                "type": "point",
                "size": 600,
                "shape": "arrow",
                "color": "#040404",
                "dy": -100,
                "strokeWidth": 2,
                "fill": "#000000"
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -120,
                "dy": 25,
                "fontStyle": "italic",
                "fontWeight": "bold",
                "fontSize": 12,
                "color": "#040404"
              },
              "encoding": { "text": { "field": "text_annotation" } }
            },
            {
              "mark": {
                "type": "text",
                "align": "left",
                "dx": -120,
                "dy": 45,
                "fontStyle": "italic",
                "fontWeight": "bold",
                "fontSize": 12,
                "color": "#040404"
              },
              "encoding": { "text": { "field": "text_annotation2" } }
            }
          ]
        }
      ]
    }
  ]
}
