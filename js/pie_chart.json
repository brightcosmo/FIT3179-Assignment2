{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Share of Global Forest Area from 1990-2020",
    "data": {"url": "../data/share-global-forest.csv"},
    "width": 600,
    "height": 600,
    "mark": {
        "type": "area"
    },
    "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": "Year"},
        "y": {"field": "Tree_number", "type": "quantitative", "title": "Global Forest Share",
              "sort": "ascending"}, 
        "color": {"field": "Continent", "type": "nominal", "title": "Continent"},
        "tooltip": [
            {"field": "Continent", "title": "Continent"},
            {"field": "Tree_number", "title": "Global Forest Share"}
        ]
    }
}
