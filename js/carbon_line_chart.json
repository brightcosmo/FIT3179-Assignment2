{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Gross Carbon Emissions by States in Malaysia (2001-2022)",
  "data": {"url": "../data/carbon_emissions_linechart.csv"},
  "config": {
    "background": "transparent",
    "axis": {
      "labelFont": "sans-serif",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "grid": false
    },
    "view": {"stroke": null}
  },
  "width": 750,
  "height": 350,
  "layer": [
    {
      "mark": {"type": "area", "point": true},
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal",
          "axis": {"title": "Year", "format": "%Y"},
          "scale": {"domain": [{"year": 2001}, {"year": 2022}]}
        },
        "y": {
          "field": "carbon_gross_emissions",
          "type": "quantitative",
          "axis": {"title": "Gross Carbon Emissions (Mg CO2e)"}
        },
        "color": {
          "field": "subnational1",
          "type": "nominal",
          "legend": {"title": "State"},
          "sort": {"field": "carbon_gross_emissions", "order": "descending"},
          "scale": {"scheme": "category20"}
        },
        "tooltip": [
          {"field": "subnational1", "type": "nominal", "title": "State"},
          {"field": "year", "type": "temporal", "title": "Year", "timeUnit": "year"},
          {"field": "carbon_gross_emissions", "type": "quantitative", "title": "Emissions (Mg CO2e)"}
        ]
      },
      "selection": {
        "State": {
          "type": "multi",
          "fields": ["subnational1"],
          "bind": "legend"
        }
      },
      "transform": [
        {"filter": {"selection": "State"}}
      ]
      },
    {
      "mark": {"type": "rule", "color": "black", "strokeDash": [2, 2]},
      "encoding": {"x": {"datum": {"year": 2003}, "type": "temporal"}}
    },
    {
      "mark": {"type": "rule", "color": "black", "strokeDash": [2, 2]},
      "encoding": {"x": {"datum": {"year": 2016}, "type": "temporal"}}
    },
    {
      "mark": {"type": "rule", "color": "black", "strokeDash": [2, 2]},
      "encoding": {"x": {"datum": {"year": 2009}, "type": "temporal"}}
    },
    {
      "mark": {"type": "rect", "color": "rgba(255, 255, 255, 0.1)",
      "width": 98,
      "height": 20},
      "encoding": {"x": {"datum": {"year": 2003}, "type": "temporal"}}
    },
    {
      "mark": {"type": "rect", "color": "rgba(255, 255, 255, 0.1)",
      "width": 150,
      "height": 40,
    "stroke": null},
      "encoding": {"x": {"datum": {"year": 2009}, "type": "temporal"}}
    },
    {
      "mark": {"type": "rect", "color": "rgba(255, 255, 255, 0.1)",
      "width": 120,
      "height": 20},
      "encoding": {"x": {"datum": {"year": 2016}, "type": "temporal"}}
    },
    {
      "data": {
          "url": "../data/clc_annotations.csv"
      },
      "mark": {
          "type": "text",
          "lineBreak": "\\",
          "align": "left",
          "dy": -180,
          "dx": -45,
          "fontSize": 12,
          "fontWeight":"bold"
      },
      "encoding": {
          "x": {
              "field": "date",
              "timeUnit": "yearmonthdate",
              "type": "temporal"
          },
          "text": {
              "field": "annotation",
              "type": "nominal"
          }
      }
    }
  ]
}