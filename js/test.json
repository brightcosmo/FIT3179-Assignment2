{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "projection": {
        "type": "equirectangular"
    },
    "params": [
        {
            "name": "date_selection",
            "value": 30
        },
        {
            "name": "month_selection",
            "value": 9
        },
        {
            "name": "year_selection",
            "value": 2023
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ArthurLYR/COVID19-Malaysia/main/data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_ocean"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightblue",
                "stroke": "lightblue",
                "strokeWidth": 1
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ArthurLYR/COVID19-Malaysia/main/data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_graticules_5"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "#dbdbdb"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/ArthurLYR/COVID19-Malaysia/main/data/malaysia_states.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#f0f0f0",
                "stroke": "#f0f0f0",
                "strokeWidth": 1
            }
        },
        {
            "params": [
                {
                    "name": "highlight",
                    "select": {
                        "type": "point",
                        "on": "mouseover"
                    }
                },
                {
                    "name": "select",
                    "select": "point"
                }
            ],
            "data": {
                "url": "https://raw.githubusercontent.com/ArthurLYR/COVID19-Malaysia/main/data/cases_state.csv"
            },
            "transform": [
                {
                    "lookup": "state",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/ArthurLYR/COVID19-Malaysia/main/data/malaysia_states.json",
                            "format": {
                                "type": "topojson",
                                "feature": "gadm41_MYS_1"
                            }
                        },
                        "key": "properties.NAME_1"
                    },
                    "as": "geo"
                },
                {
                    "lookup": "state",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/ArthurLYR/COVID19-Malaysia/main/data/population.csv"
                        },
                        "key": "state",
                        "fields": [
                            "pop"
                        ]
                    }
                },
                {
                    "filter": "datum.date == date_selection && datum.month == month_selection && datum.year == year_selection"
                },
                {
                    "calculate": "(abs(datum.cases_active)) / datum.pop * 10000",
                    "as": "cases_active_10000"
                }
            ],
            "mark": {
                "type": "geoshape",
                "cursor": "pointer",
                "stroke": "#f0f0f0",
                "strokeWidth": 1
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "cases_active_10000",
                    "type": "quantitative",
                    "title": [
                        "Active Cases",
                        "(per 10,000",
                        "population)"
                    ],
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            10.789210789,
                            31.955211025,
                            65.536872068,
                            121.964829219
                        ],
                        "range": [
                            "#fcbba1",
                            "#fc9272",
                            "#fb6a4a",
                            "#ef3b2c",
                            "#cb181d"
                        ]
                    },
                    "legend": {
                        "orient": "right",
                        "format": ".0f"
                    }
                },
                "tooltip": [
                    {
                        "field": "date_full",
                        "type": "temporal",
                        "title": "Date"
                    },
                    {
                        "field": "state",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "pop",
                        "type": "quantitative",
                        "title": "Population",
                        "format": ","
                    },
                    {
                        "field": "cases_active",
                        "type": "quantitative",
                        "title": "Active Cases (raw)",
                        "format": ","
                    },
                    {
                        "field": "cases_active_10000",
                        "type": "quantitative",
                        "title": "Active Cases (per 10,000 population)",
                        "format": ".2f"
                    }
                ],
                "fillOpacity": {
                    "condition": {
                        "param": "select",
                        "value": 1
                    },
                    "value": 0.1
                },
                "strokeWidth": {
                    "condition": [
                        {
                            "param": "select",
                            "empty": false,
                            "value": 1
                        },
                        {
                            "param": "highlight",
                            "empty": false,
                            "value": 3
                        }
                    ],
                    "value": 1
                }
            }
        }
    ],
    "config": {
        "background": "transparent",
        "font": "Open Sans",
        "view": {
            "stroke": null
        },
        "customFormatTypes": true
    }
}