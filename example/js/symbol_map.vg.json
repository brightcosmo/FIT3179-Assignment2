{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Deforestation in",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "../data/malaysia-states.topojson",
    "format": {"type": "topojson", "feature": "states"}
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "../data/Country_carbon_data.csv"
        },
        "key": "subnational1",
        "fields": ["tc_loss_ha_2003"]
      }
    },
    {"calculate": "datum.tc_loss_ha_2003", "as": "Deforestation"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Deforestation",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "id", "type": "nominal", "title": "Country"},
      {"field": "Deforestation", "type": "quantitative", "title": "Deforestation"}
    ]
  }
}